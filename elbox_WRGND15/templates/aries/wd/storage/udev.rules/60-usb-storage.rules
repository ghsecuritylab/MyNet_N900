ACTION=="add", KERNEL=="sd[a-z]1", KERNELS=="2-1", RUN+="/etc/scripts/usbmount.sh add %k /internalhd/root"
ACTION=="add", KERNEL=="sd[a-z]2", KERNELS=="2-1", RUN+="/etc/scripts/usbmount.sh add %k /internalhd/etc"
ACTION=="add", KERNEL=="sd[a-z]3", KERNELS=="2-1", RUN+="/etc/scripts/usbmount.sh add %k /internalhd/tmp"
ACTION=="add", KERNEL=="sd[a-z]6", KERNELS=="2-1", RUN+="/etc/scripts/usbmount.sh add %k /var/tmp/storage/Public"
ACTION=="add", KERNEL=="sd[a-d]", KERNELS=="1-1", RUN+="/etc/scripts/usbmount.sh add %k null %s{serial}"
ACTION=="add", KERNEL=="sd[a-d][1-7]", KERNELS=="1-1", RUN+="/etc/scripts/usbmount.sh add %k null %s{serial}"
ACTION=="add", KERNEL=="sg[0-9]*", KERNELS=="1-1", RUN+="/etc/scripts/unlock_wd.sh add /dev/%k USB1 %s{serial}"
ACTION=="add", KERNEL=="sg[0-9]*", KERNELS=="2-1", RUN+="/etc/scripts/unlock_wd.sh add /dev/%k USB2 %s{serial}"
ACTION=="add", KERNEL=="sd[a-z][1-6]", KERNELS=="2-1", RUN+="/etc/scripts/SAMBA_speedup.sh %k"
ACTION=="add", KERNEL=="sd[a-d]", KERNELS=="1-1", RUN+="/etc/scripts/SAMBA_speedup.sh %k"
ACTION=="add", KERNEL=="sd[a-d][1-7]", KERNELS=="1-1", RUN+="/etc/scripts/SAMBA_speedup.sh %k"

ACTION=="remove", KERNEL=="sd*", RUN+="/etc/scripts/usbmount.sh remove %k"
ACTION=="remove", KERNEL=="sd*", KERNELS=="1-1", RUN+="/etc/scripts/unlock_wd.sh remove /dev/%k USB1"
ACTION=="remove", KERNEL=="sd*", KERNELS=="2-1", RUN+="/etc/scripts/unlock_wd.sh remove /dev/%k USB2"
SUBSYSTEM=="scsi_generic", RUN+="/etc/scripts/unlock_sg.sh /dev/%k %n %s{serial} %E{KERNELS}"
